<!--pages/ask/ask.wxml-->
<view class="page-container">
    <view class="result-container">
        <result hidden="{{messages === '[]'}}" wx:for="{{messages}}" wx:for-item="msg"  role="{{msg.role}}" content="{{msg.content}}"
        wx:key="index"
         class="result-item" />
    </view>
    <view >
        <card class="input-container" askText="{{askText}}" />
        <btn-group bind:send="Send" bind:clear="Clear" loading="{{loading}}" />
    </view>
</view>