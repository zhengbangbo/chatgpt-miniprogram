<!--pages/ask/ask.wxml-->
<view style="height: 100vh;">
    <view style="height: 70%;" class="result-container">
        <result wx:for="{{messages}}" wx:for-item="msg"  role="{{msg.role}}" content="{{msg.content}}"
        wx:key="index"
         class="result-item" />
    </view>
    <view style="height: 30%;">
        <card />
        <btn-group bind:send="Send" bind:clear="Clear" loading="{{loading}}" />
    </view>
</view>