<!--pages/ask/ask.wxml-->
<page-meta page-style="{{pageStyle}}">
</page-meta>
<view class="page-container">
    <t-notice-bar visible="{{isError}}" theme="error" content="{{errorMessage}}"></t-notice-bar>
    <result scrollViewHeight="{{scrollViewHeight}}" messages="{{messages}}" content="{{content}}" onStream="{{onStream}}" scrollLast="{{scrollLast}}" />
    <view class="input-group">
        <card class="input-container" model:content="{{askText}}" maxLength="{{300}}" />
        <btn-group bind:send="WsSend" bind:clear="Clear" loading="{{loading}}" />
    </view>
</view>