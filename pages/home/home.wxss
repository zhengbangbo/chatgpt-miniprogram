page {
    background-color: #f6f6f6;
}

.main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    padding-left: 32rpx;
    padding-right: 32rpx;
    padding-top: 48rpx;
    padding-bottom: 240rpx;
}

.desc {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: rgba(0, 0, 0, 0.4);
    margin: 48rpx 0 0 0;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 44rpx;
    padding: 0 16rpx 0 16rpx;
    gap: 32rpx;
}

.logo-container {
    border-radius: 100%;
    background: rgb(97,229,37);
background: radial-gradient(circle, rgba(97,229,37,1) 7%, rgba(121,68,9,0.19233630952380953) 30%, rgba(255,255,255,1) 80%);
}

.logo {
    height: 296rpx;
    width: 296rpx;

}

.logo-transition {
    transition: all 0.5s ease-in-out;
}

.logo-moved {
    transform: rotateY(180deg);
}